{% extends 'base.html.twig' %}

{% block title %}Тестовое задание: 2{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>2. Список планет с количеством жителей по убыванию</h1>

    <table>
        <tr>
            <th>Название</th>
            <th>Кол-во жителей(planet.residents, не planet.population)</th>
        </tr>
        {% for planet in planets  %}
            <tr>
                <td>{{ planet.name }}</td>
                <td>{{ planet.number }}</td>
            </tr>
        {% endfor %}
    </table>

</div>
{% endblock %}
